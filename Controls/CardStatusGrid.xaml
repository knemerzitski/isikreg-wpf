<Grid x:Class="IsikReg.Controls.CardStatusGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IsikReg.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="168" d:DesignWidth="600"
             MinHeight="168">
  <TextBlock x:Name="CardText" 
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             FontSize="50"
             FontWeight="Bold"
             TextWrapping="WrapWithOverflow"
             Text="Sisesta ID-kaardi lugeja"
             Foreground="Black"
             TextAlignment="Center"
             Margin="5"
             />
  <Image x:Name="CardIcon" 
         Source="/Controls/card-icon.png"
         Margin="5"
         Width="32"
         Height="20"
         HorizontalAlignment="Right" 
         VerticalAlignment="Bottom" 
         />
</Grid>
